---
const { navn, email, rolle, billede, aktiv, type } = Astro.props;
---

<article class={type}>
  <img src={billede} alt={navn} />
  <h3>{navn}</h3>
  <p>{email}</p>
  <p>{rolle}</p>
  {aktiv && <p class="aktiv">ON SALE</p>}
</article>

